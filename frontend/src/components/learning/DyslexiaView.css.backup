.dyslexia-view {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  background-attachment: fixed;
  position: relative;
  overflow-x: hidden;
}

/* Soft ambient shapes */
.dyslexia-view::before,
.dyslexia-view::after {
  content: '';
  position: fixed;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.dyslexia-view::before {
  top: -50%;
  right: -50%;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.12) 0%, transparent 70%);
  animation: floatShape 20s ease-in-out infinite;
}

.dyslexia-view::after {
  bottom: -50%;
  left: -50%;
  background: radial-gradient(circle, rgba(14, 116, 144, 0.12) 0%, transparent 70%);
  animation: floatShape 24s ease-in-out infinite reverse;
}

@keyframes floatShape {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  50% {
    transform: translate(50px, 50px) scale(1.08);
  }
}

/* Navbar */
.navbar {
  background: linear-gradient(135deg, #1e3a8a 0%, #0e7490 100%);
  padding: 18px 36px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  position: sticky;
  top: 0;
  z-index: 5;
}

.nav-brand h1 {
  font-size: 24px;
  margin: 0;
  color: #ffffff;
  text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: 14px;
}

.user-name {
  color: #ffffff;
  font-weight: 600;
}

.btn-settings,
.btn-logout {
  padding: 10px 20px;
  border: 2px solid rgba(255, 255, 255, 0.5);
  background-color: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  border-radius: 24px;
  cursor: pointer;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.btn-settings:hover {
  border-color: #ffffff;
  background-color: #ffffff;
  color: #1e3a8a;
  transform: translateY(-2px);
  box-shadow: 0 10px 24px rgba(255, 255, 255, 0.25);
}

.btn-logout:hover {
  border-color: #ef4444;
  background-color: #ef4444;
  color: #ffffff;
  transform: translateY(-2px);
  box-shadow: 0 10px 24px rgba(239, 68, 68, 0.35);
}

/* Main Content */
.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px 60px;
  position: relative;
  z-index: 1;
}

.welcome-section {
  margin-bottom: 40px;
}

.welcome-section h2 {
  font-size: 36px;
  margin-bottom: 12px;
  color: #0f172a;
}

.subtitle {
  font-size: 18px;
  color: #475569;
  line-height: 1.7;
  max-width: 900px;
}

/* Progress Card */
.progress-card {
  background: #ffffff;
  border-radius: 18px;
  padding: 32px;
  margin-bottom: 40px;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.12);
  border: 1px solid rgba(15, 23, 42, 0.08);
}

.card-header h3 {
  font-size: 26px;
  margin-bottom: 20px;
  color: #0f172a;
}

.progress-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 24px;
}

.stat-item {
  text-align: center;
  padding: 18px;
  border-radius: 14px;
  background: #f8fafc;
  border: 1px solid rgba(15, 23, 42, 0.08);
}

.stat-value {
  font-size: 44px;
  font-weight: 800;
  color: #1e3a8a;
  margin-bottom: 6px;
}

.stat-label {
  font-size: 15px;
  color: #475569;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.06em;
}

/* Lessons Section */
.lessons-section {
  margin-bottom: 40px;
}

.lessons-section h3 {
  font-size: 26px;
  margin-bottom: 24px;
  color: #0f172a;
}

.lessons-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 24px;
}

.lesson-card {
  background-color: #ffffff;
  border-radius: 16px;
  padding: 24px;
  border: 1px solid rgba(15, 23, 42, 0.1);
  box-shadow: 0 6px 18px rgba(15, 23, 42, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.lesson-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 26px rgba(30, 58, 138, 0.2);
}

.lesson-icon {
  font-size: 13px;
  font-weight: 700;
  padding: 6px 12px;
  border-radius: 999px;
  background: #e2e8f0;
  border: 1px solid rgba(15, 23, 42, 0.1);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
  color: #0f172a;
  letter-spacing: 0.04em;
  text-transform: uppercase;
}

.lesson-card h4 {
  font-size: 20px;
  margin-bottom: 10px;
  color: #0f172a;
}

.lesson-meta {
  margin-bottom: 16px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  align-items: center;
}

.badge {
  display: inline-block;
  padding: 4px 12px;
  background-color: #1e3a8a;
  color: #ffffff;
  border-radius: 16px;
  font-size: 13px;
  font-weight: 600;
}

.status-pill {
  display: inline-flex;
  align-items: center;
  padding: 4px 12px;
  border-radius: 16px;
  font-size: 12px;
  font-weight: 700;
  border: 1px solid rgba(15, 23, 42, 0.15);
  background: #f1f5f9;
  color: #0f172a;
}

.status-not-started {
  border-color: #cbd5f5;
  color: #3730a3;
  background: #eef2ff;
}

.status-in-progress {
  border-color: #fde68a;
  color: #92400e;
  background: #fffbeb;
}

.status-completed {
  border-color: #bbf7d0;
  color: #166534;
  background: #ecfdf3;
}

.lesson-progress {
  margin-bottom: 16px;
}

.progress-bar-container {
  width: 100%;
  height: 8px;
  background-color: #e2e8f0;
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 8px;
}

.progress-bar-fill {
  height: 100%;
  background-color: #1e3a8a;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 14px;
  color: #475569;
}

.btn.btn-primary.btn-block {
  width: 100%;
  padding: 12px 16px;
  border: none;
  border-radius: 10px;
  background: #0e7490;
  color: #ffffff;
  font-weight: 700;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.btn.btn-primary.btn-block:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(14, 116, 144, 0.3);
}

/* Tips Section */
.tips-section {
  margin-bottom: 40px;
}

.tips-section h3 {
  font-size: 26px;
  margin-bottom: 20px;
  color: #0f172a;
}

.tips-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.tip-card {
  background-color: #e8f5e9;
  border: 2px solid #66bb6a;
  border-radius: 12px;
  padding: 20px;
}

.tip-card h4 {
  font-size: 18px;
  margin-bottom: 8px;
  color: #2e7d32;
}

.tip-card p {
  font-size: 15px;
  color: #1b5e20;
  margin: 0;
}

/* High contrast theme adjustments */
body.theme-high-contrast .tip-card,
body.theme-yellow-black .tip-card {
  background-color: var(--bg-secondary);
  border-color: var(--accent-color);
}

body.theme-high-contrast .tip-card h4,
body.theme-high-contrast .tip-card p,
body.theme-yellow-black .tip-card h4,
body.theme-yellow-black .tip-card p {
  color: var(--text-primary);
}

/* Responsive */
@media (max-width: 768px) {
  .navbar {
    padding: 15px 20px;
  }

  .nav-brand h1 {
    font-size: 20px;
  }

  .main-content {
    padding: 24px 15px 40px;
  }

  .welcome-section h2 {
    font-size: 26px;
  }

  .lessons-grid,
  .tips-grid {
    grid-template-columns: 1fr;
  }

  .progress-stats {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .nav-menu {
    flex-wrap: wrap;
    justify-content: flex-end;
  }
}
